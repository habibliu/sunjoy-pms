<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sunjoy.parkmodel.mapper.PmsParkMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="PmsPark">
        <id column="park_id" property="parkId"/>
        <result column="park_name" property="parkName"/>
        <result column="park_type" property="parkType"/>
        <result column="opu_id" property="opuId"/>
        <result column="opu_name" property="opuName"/>
        <result column="leader" property="leader"/>
        <result column="phone" property="phone"/>
        <result column="region" property="region"/>
        <result column="address" property="address"/>
        <result column="total_lots" property="totalLots"/>
        <result column="remark" property="remark"/>
        <result column="status" property="status"/>
        <result column="del_flag" property="delFlag"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="selectBaseColumn">
        select park_id,
               park_name,
               park_type,
               opu_id,
               opu_name,
               leader,
               phone,
               region,
               address,
               total_lots,
               status,
               create_time
        from pms_park
    </sql>

    <select id="selectParkList" resultMap="BaseResultMap">
        <include refid="selectBaseColumn"/>
        <where>
            <if test="parkName!=null  and parkName != ''">
                and park_name like concat('%', #{parkName}, '%')
            </if>
            <if test="parkType!=null  and parkName != ''">
                and park_type = #{parkType}
            </if>
            <if test="region!=null  and region != ''">
                and region = #{region}
            </if>
        </where>
    </select>

    <insert id="insertPark" parameterType="PmsPark" useGeneratedKeys="true" keyProperty="parkId">
        insert into pms_park(
        <if test="parkId != null and parkId != 0">
            park_id,
        </if>
        <if test="parkName != null and parkName != ''">
            park_name,
        </if>
        <if test="parentId != null and parentId != 0">
            parent_id,
        </if>
        <if test="opuId != null and opuId != 0">
            opu_id,
        </if>
        <if test="opuName != null and opuName != ''">
            opu_name,
        </if>
        <if test="leader != null and leader != ''">
            leader,
        </if>
        <if test="phone != null and phone != ''">
            phone,
        </if>
        <if test="region != null and region != ''">
            region,
        </if>
        <if test="address != null and address != ''">
            address,
        </if>
        <if test="parkType != null and parkType != ''">
            park_type,
        </if>
        <if test="totalLots != null and totalLots != 0">
            total_lots,
        </if>
        <if test="status != null and status != ''">
            status,
        </if>
        <if test="createBy != null and createBy != ''">
            create_by,
        </if>

        <if test="remark != null and remark != ''">
            remark,
        </if>
        create_time
        )values(
        <if test="parkId != null and parkId != 0">
            #{parkId},
        </if>
        <if test="parkName != null and parkName != ''">
            #{parkName},
        </if>
        <if test="parentId != null and parentId != 0">
            #{parentId},
        </if>
        <if test="opuId != null and opuId != 0">
            #{opuId},
        </if>
        <if test="opuName != null and opuName != ''">
            #{opuName},
        </if>
        <if test="leader != null and leader != ''">
            #{leader},
        </if>
        <if test="phone != null and phone != ''">
            #{phone},
        </if>
        <if test="region != null and region != ''">
            #{region},
        </if>
        <if test="address != null and address != ''">
            #{address},
        </if>
        <if test="parkType != null and parkType != 0">
            #{parkType},
        </if>
        <if test="totalLots != null and totalLots != 0">
            #{totalLots},
        </if>
        <if test="status != null and status != ''">
            #{status},
        </if>
        <if test="createBy != null and createBy != ''">
            #{createBy},
        </if>

        <if test="remark != null and remark != ''">
            #{remark},
        </if>
        sysdate()
        )
    </insert>

    <select id="selectParkById" resultType="com.sunjoy.parkmodel.entity.PmsPark" parameterType="Long">
        <include refid="selectBaseColumn"/>
        where park_id=#{parkId}
    </select>

    <update id="updatePark" parameterType="PmsPark">
        update pms_park
        <set>
            <if test="parkName != null and parkName != ''">
                park_name = #{parkName},
            </if>
            <if test="parentId != null and parentId != 0">
                parent_id = #{parentId},
            </if>
            <if test="opuId != null and opuId != 0">
                opu_id = #{opuId},
            </if>
            <if test="opuName != null and opuName != ''">
                opu_name = #{opuName},
            </if>
            <if test="leader != null and leader != ''">
                leader = #{leader},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="region != null and region != ''">
                region = #{region},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="parkType != null and parkType != 0">
                park_type = #{parkType},
            </if>
            <if test="totalLots != null and totalLots != 0">
                total_lots = #{totalLots},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
            <if test="updateBy != null and updateBy != ''">
                update_by = #{updateBy},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
            update_time = sysdate()
        </set>
        where park_id = #{parkId}
    </update>
</mapper>